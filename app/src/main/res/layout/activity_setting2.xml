<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/SettingID"
            android:layout_width="250dp"
            android:layout_height="62dp"
            android:gravity="center_horizontal"
            android:text="Nastavení"
            android:textAlignment="center"
            android:textColor="#151212"
            android:textSize="48sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/password"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:text="Původní heslo:"
            android:textColor="#070707"
            />


        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="214dp"
            android:layout_height="22dp"
            android:ems="10"
            android:inputType="textPassword"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/newPassword"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:text="Nové heslo:"
            android:textColor="#070707"
            />
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="214dp"
            android:layout_height="22dp"
            android:ems="10"
            android:inputType="textPassword"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/newPasswordCheck"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:text="Kontrola hesla:"
            android:textColor="#070707"
            />
        <EditText
            android:id="@+id/newPasswordCheckInput"
            android:layout_width="214dp"
            android:layout_height="22dp"
            android:ems="10"
            android:inputType="textPassword"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uložit"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_navigation">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>


</LinearLayout>